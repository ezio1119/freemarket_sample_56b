= render 'items/header'

- breadcrumb :bought
= render 'shared/breadcrumbs'

.mypage

  = render 'users/sidebar'
  .mypage__right
    .mypage__right__side
      .mypage__right__side__tab--white 購入した商品
      .mypage__right__side__tab
        .mypage__right__side__tab__top
          .mypage__right__side__tab__top--right 取引中
          .mypage__right__side__tab__top--left 過去の取引
        .mypage__right__side__tab__bottom
          %ul.mypage__right__side__tab__bottom__list
          - if @items
            = render partial: 'item', collection: @items
          - else
            %li.mypage__right__side__tab__bottom__list__content 取引中の商品はありません


= render 'items/footer'