                  .mypage__right__side__credit__container__top__list__content__icon
                    = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2508029365", class: "mypage__right__side__credit__container__top__list__content__icon", alt: "visa"  
